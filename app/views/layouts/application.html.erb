<!DOCTYPE html>
<html>
  <head>
    <title>NorikoeBu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <%= search_form_for @search,url: user_counselings_search_path do |f| %>
   <%= f.text_field :title_cont ,placeholder: '検索するテキストを入力...' %></dt>
   <%= f.submit ("検索") %>
  <% end %>

  <% if admin_signed_in? %>
   <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete,class: "btn btn-outline-dark" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <% elsif user_signed_in? %>
   <%= current_user.name %>さんがログイン中
   <%= link_to "トップページ（相談一覧）",root_path %>
   <%= link_to "管理者の体験談へ",user_admins_path %>
   <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
   <%= link_to "マイページヘ",user_customer_path(current_user) %>
   <%= link_to "相談する",new_user_counseling_path %>
  <% else %>
   <%= link_to "管理者の体験談へ",user_admins_path %>
   <%= link_to "トップページ（相談一覧）",root_path %>
   <%= link_to "ログイン", user_session_path %>すると相談ができます
  <% end %>
  <body>
    <%= yield %>
  </body>
</html>

